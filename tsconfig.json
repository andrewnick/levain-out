{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types",
      "./definitions/node-dht-sensor.d.ts"
    ],
    "baseUrl": ".",
    "paths": {
      "@/pages/*": [
        "app/pages/*"
      ],
      "@/graphql/*": [
        "app/graphql/*"
      ],
      "@/lib/*": [
        "server/lib/*"
      ],
      "@/types/*": [
        "types/*"
      ],
      "@/components/*": [
        "app/components/*"
      ],
      "@/db/*": [
        "db/*"
      ],
      "@/css/*": [
        "css/*"
      ]
    }
  },
  "include": [
    "app/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}